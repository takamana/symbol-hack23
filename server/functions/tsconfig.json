{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2021"
  },
  "compileOnSave": true,
  "include": [
    "src", "types/**/*.ts",
  ]
}
